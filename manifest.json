{
    "name": "shortcut",
    "description": "Surfing the web has never been so fast",
    "version": "0.1",
    "manifest_version": 3,
    "options_page": "views/options/options.html",
    "chrome_url_overrides": {
        "newtab": "views/newtab/newtab.html"
    },
    "permissions": [
        "storage",
        "search",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "views/popup/popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}